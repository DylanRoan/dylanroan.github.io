---
const education = [
  {
    name: "Bath Spa University",
    logo: "/portfolio/assets/icons/bsu_uk.png",
    degree: "Bachelor of Science - BS, Creative Computing",
    startDate: "2021",
    endDate: "2024",
    grade: "77.6 with Honours",
  },
];

const certifications = [
  {
    name: "Microsoft Certified: Azure Fundamentals",
    logo: "/portfolio/assets/icons/azure_fundamentals.svg",
    issuer: "Microsoft",
    date: "2023-08-17",
    link: "https://learn.microsoft.com/api/credentials/share/en-us/DylanRoanDuario-2822/4BF811414FC919A3?sharingId=6C78B0896EB299BB",
  },
];
---

<div class="w-full flex flex-col rounded-lg outline-2 px-2 gap-2">
  <h2
    class="md:text-3xl text-2xl font-bold md:text-start text-center"
    id="qualifications">
    Education & Certifications
  </h2>

  <div class="flex flex-col gap-8">
    {
      education.map(({ name, logo, degree, startDate, endDate, grade }) => (
        <div class="flex gap-4 md:flex-row flex-col">
          <img src={logo} alt={name} class="mx-auto object-contain w-20 h-20" />

          <div class="flex-1 flex flex-col md:text-start text-center">
            <h2 class="text-xl font-semibold">{degree}</h2>
            <p class="text-base">
              {name} | {startDate} - {endDate}
            </p>
            <p class="text-sm">{grade}</p>
          </div>
        </div>
      ))
    }
  </div>

  <div class="flex flex-col gap-8">
    {
      certifications.map(({ name, issuer, date, link, logo }) => (
        <a
          class="flex gap-4 md:flex-row flex-col cursor-pointer"
          href={link}
          target="_blank"
          rel="noopener noreferrer">
          <img src={logo} alt={name} class="mx-auto object-contain w-20 h-20" />

          <div class="flex-1 flex flex-col md:text-start text-center">
            <h2 class="text-xl font-semibold">{name}</h2>
            <p class="text-base">{issuer}</p>
            <p class="text-sm">
              {new Date(date).toLocaleDateString("en-US", {
                month: "long",
                day: "numeric",
                year: "numeric",
              })}
            </p>
          </div>
        </a>
      ))
    }
  </div>
</div>
