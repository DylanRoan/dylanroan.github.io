---
import { SEO } from "astro-seo";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "@fontsource/jua";

import "@/styles/globals.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/assets/thumbnail.webp",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title ? title + " - Dylan Roan Duario" : "Dylan Roan Duario";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="My portfolio website where I showcase my projects and previous work."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: "Dylan Roan Duario - Software Developer",
          image: resolvedImageWithDomain,
        },
        image: {
          url: resolvedImageWithDomain,
          alt: "Dylan Roan Duario - Software Developer",
        },
      }}
    />
  </head>
  <body>
    <slot />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>

    <div id="tsparticles"></div>

    <script>
      import { tsParticles } from "@tsparticles/engine";
      import { loadFull } from "tsparticles";
      import { loadLinksPreset } from "@tsparticles/preset-links";

      (async () => {
        await loadFull(tsParticles);
        await loadLinksPreset(tsParticles);

        await tsParticles.load({
          id: "tsparticles",
          options: {
            background: {
              color: "#000",
            },
            style: {
              opacity: "0.5",
            },
            fullScreen: {
              zIndex: -50,
            },
            particles: {
              number: {
                value: 75,
                density: {
                  enable: true,
                },
              },
            },
            preset: "links",
          },
        });
      })();
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
